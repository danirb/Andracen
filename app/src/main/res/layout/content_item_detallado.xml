<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="es.hol.danirb.andracen.controladores.ItemDetallado"
    tools:showIn="@layout/activity_item_detallado">

    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nombre:"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_nombre_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nombre_item_id"
        android:gravity="center"
        android:text="Tipo:"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_tipo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipo"
        android:gravity="center"
        android:textSize="20sp" />

<LinearLayout
    android:layout_below="@+id/tv_tipo_id"
    android:id="@+id/zona"
    android:background="@color/accent"
    android:foregroundGravity="center"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:orientation="horizontal" />
</RelativeLayout>
